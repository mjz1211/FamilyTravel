    }

.sidenav a:hover, .offcanvas a:focus{
    color: #f1f1f1;
}

.sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
}

    .spanStyle {
        font-size:30px;
        cursor:pointer;
        float:right;
        background:black;
        color:white;
        transition: 0.5s;
        Right:0;
    }

