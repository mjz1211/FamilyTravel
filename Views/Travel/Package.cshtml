@using ShareTravel.Models;
@{
    string uvi = ViewBag.UVI;
    string aqi = ViewBag.AQI;

    int intUVI = Convert.ToInt16(uvi);
    int intAQI = Convert.ToInt16(aqi);
    string uviNote = "", aqiNote ="";

    if (intUVI >= 11)
    {
        uviNote = "危險級";
    }
    else if (intUVI <= 10 || intUVI >= 8) {
        uviNote = "過量級";

    }
    else if (intUVI <= 6 || intUVI >= 7)
    {
        uviNote = "高量級";

    }
    else if (intUVI <= 3 || intUVI >= 5)
    {
        uviNote = "中量級";

    }
    else if (intUVI <= 0 || intUVI >= 2)
    {
        uviNote = "低量級";
    }


    if (intAQI >= 201)
    {
        aqiNote = "危險級";
    }
    else if (intAQI <= 151 || intAQI >= 200)
    {
        aqiNote = "非常不健康";

    }
    else if (intAQI <= 101 || intAQI >= 150)
    {
        aqiNote = "不健康";

    }
    else if (intAQI <= 51 || intAQI >= 100)
    {
        aqiNote = "普通";

    }
    else if (intAQI <= 0 || intAQI >= 50)
    {
        aqiNote = "良好";
    }



}
